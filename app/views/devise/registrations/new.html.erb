<div class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="text-center">Phantom Daily</h1>
        <h2><%= devise_error_messages! %></h2>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, class: "form col-md-12 center-block", url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, :placeholder => "请输入邮箱", class: "form-control input-lg", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.text_field :name, :placeholder => "请输入姓名", class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, :placeholder => "请输入密码", class: "form-control input-lg", autocomplete: "off" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, :placeholder => "请再次输入密码", class: "form-control input-lg", autocomplete: "off" %>
          </div>
          <div class="form-group">
            <%= f.submit "注册", class: "btn btn-primary btn-lg btn-block" %>
            <span class="pull-right"><a href="sign_in">登陆</a></span><span><a href="edit">修改密码</a></span>
          </div>
        <% end %>
      </div>
    <div class="modal-footer"></div>
    </div>
  </div>
</div>
