<%= content_for :css do %>
    <%= stylesheet_link_tag 'css/styles.css' %>
    <%= stylesheet_link_tag 'css/bootstrap/css/bootstrap.min.css' %>
<% end %>
<div class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
        <h1 class="text-center">Phantom Daily</h1>
        <h2><%= devise_error_messages! %></h2>
    </div>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, class: "form col-md-12 center-block", url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group">
          <%= f.text_field :email, :placeholder => "请输入邮箱", class: "form-control input-lg", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :current_password, :placeholder => "请输入原密码", class: "form-control input-lg", autocomplete: "off" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :placeholder => "请输入新密码", class: "form-control input-lg", autocomplete: "off" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, :placeholder => "请再次输入新密码", class: "form-control input-lg", autocomplete: "off" %>
        </div>
        <div class="form-group">
          <%= f.submit "修改", class: "btn btn-primary btn-lg btn-block" %>
          <span class="pull-right"><a href="sign_in">返回</a></span><span><a href="sign_up">注册</a></span>
        </div>
      <% end %>
    </div>
  <div class="modal-footer"></div>
  </div>
  </div>
</div>
