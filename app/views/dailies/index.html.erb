<%= render 'header' %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="well">
        <h1 class="text-center">
          <%= "#{@date}日报" %>
        </h1>
        <% @dailies.each do |daily| %>
          <h3><%= daily.user.name %>&nbsp;&nbsp;<small><%= daily.created_at.to_s.split(" ")[1] %></small></h3>
          <h4><%= daily.title%></h4>
          <p><%= $markdown.render(daily.content).html_safe %></p>
          <hr>
        <% end %>
      </div>
      <ul class="pager">
        <li class="previous">
          <a href="<%= "/?date=#{@date - 1}" %>">&larr; 前一天</a>
        </li>
        <li class="next">
          <a href="<%= "/?date=#{@date + 1}" %>">后一天 &rarr;</a>
        </li>
      </ul>
    </div>
  </div>
</div>
